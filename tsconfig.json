{
  "compilerOptions": {
    /* Основные настройки */
    "target": "ES2020",                          // Версия JS на выходе
    "module": "commonjs",                        // Система модулей (для Node.js)
    "lib": ["ES2020"],                          // Встроенные типы
    "outDir": "./dist",                         // Папка для скомпилированного JS
    "rootDir": "./src",                         // Папка с исходниками TS

    /* Строгость типизации */
    "strict": true,                             // Включить все строгие проверки
    "noImplicitAny": true,                      // Запретить неявный any
    "strictNullChecks": true,                   // Строгая проверка null/undefined
    "strictFunctionTypes": true,                // Строгая типизация функций
    "strictPropertyInitialization": true,       // Свойства класса должны быть инициализированы
    "noUnusedLocals": true,                     // Ошибка если переменная не используется
    "noUnusedParameters": true,                 // Ошибка если параметр не используется

    /* Настройки модулей */
    "moduleResolution": "node",                 // Резолвинг как в Node.js
    "esModuleInterop": true,                    // Совместимость с ES модулями
    "allowSyntheticDefaultImports": true,       // Разрешить default import
    "resolveJsonModule": true,                  // Поддержка import json файлов

    /* Дополнительные настройки */
    "skipLibCheck": true,                       // Не проверять типы в node_modules
    "forceConsistentCasingInFileNames": true,   // Чувствительность к регистру имён файлов
    "sourceMap": true,                          // Генерировать source maps для отладки
    "declaration": true,                        // Генерировать .d.ts файлы
    "declarationMap": true                      // Source maps для .d.ts файлов
  },
  "include": ["src/**/*"],                      // Какие файлы компилировать
  "exclude": ["node_modules", "dist"]           // Какие игнорировать
}
